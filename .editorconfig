root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.rs]
indent_style = space
indent_size = 4

[*.{toml,yml,yaml,json}]
indent_style = space
indent_size = 2

[*.{svelte,ts,js,html,css}]
indent_style = space
indent_size = 2

[*.swift]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
